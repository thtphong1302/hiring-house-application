<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen"
    tools:context=".Activity.MainActivity">

    <FrameLayout
        android:id="@+id/frmlayoutHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#19A898">

        <ImageView
            android:id="@+id/imgAdd_room"
            android:layout_width="70dp"
            android:layout_height="59dp"
            android:layout_marginEnd="14dp"
            android:src="@drawable/logo" />
        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginLeft="50dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="House_MANAGER"
            app:titleTextColor="#6C201A" />

        <!-- Nút thêm căn hộ -->


    </FrameLayout>

    <!-- Layout chứa hai nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"

        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="261dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="40dp"> <!-- Điều chỉnh giá trị để bo góc theo ý muốn -->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/nhadep" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_below="@id/frmlayoutHome"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Nút "Quản lý" -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Hình ảnh logo -->
            <ImageView
                android:id="@+id/imgManager"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bogoc"
                android:src="@drawable/toanha" />

            <!-- Nội dung -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Nút "Thống kê" -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Hình ảnh logo -->
            <ImageView
                android:id="@+id/imgStatistics"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bogoc"
                android:contentDescription="Doanhthu Logo"
                android:src="@drawable/doanhthu" />

            <!-- Nội dung -->
            <TextView
                android:id="@+id/txtdoanhthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
