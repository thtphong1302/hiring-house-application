<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="265dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="#0E426C"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgcannha"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/cannha" />

            <TextView
                android:id="@+id/txtcannha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:gravity="center"
                android:text="Tên căn nhà"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <ImageButton
                android:background="@drawable/bogoc"
                android:id="@+id/imgedit"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/imgdelete"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgelectric"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/dien" />

            <TextView
                android:id="@+id/txtelectric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điện: 3.500đ/kWH"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgwater"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nuoc" />

            <TextView
                android:id="@+id/txtwater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nước: 100k/người"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtstk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STK: 052249900222"
                android:textColor="#24327C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtnameTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHỦ TK:NGUYEN VAN A"
                android:textColor="#24327C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtnameNH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NH: VIETCOMBANK"
                android:textColor="#24327C"
                android:textSize="20dp" />

        </LinearLayout>

        <Button

            android:id="@+id/btnListRoom"
            android:layout_width="203dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/bogoc"
            android:text="Xem danh sách" />

    </androidx.cardview.widget.CardView>
</LinearLayout>